{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch chrome",
            "url": "http://localhost:4200",  
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "trace": true,
            "sourceMapPathOverrides": {
               "webpack:///./*": "${webRoot}/*",
               "webpack:///src/*": "${webRoot}*",
               "webpack:///*": "*",
               "webpack:///./~/*": "${webRoot}/node_modules/*"
}

        }
    ]
}
